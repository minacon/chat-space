.message{data: {id: message.id}}
  .upper-info
    .upper-info__user
      = message.user.name
    .upper-info__date
      = message.created_at.strftime("%Y/%m/%d %H:%M")
  .message__text
    - if message.body.present?
      %p.lower-message__content
        = message.body
    = image_tag message.image.url, class: 'image-label__input' if message.image.present?